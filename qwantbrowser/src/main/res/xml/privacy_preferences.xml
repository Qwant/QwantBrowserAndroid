<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.PreferenceCategory
        android:title="@string/tracker_category" >

        <org.mozilla.reference.browser.settings.QwantPreferenceSwitch
            android:defaultValue="true"
            android:title="@string/preferences_tracking_protection_normal"
            android:key="@string/pref_key_tracking_protection_normal"
            app:iconSpaceReserved="false"/>

        <org.mozilla.reference.browser.settings.QwantPreferenceSwitch
            android:defaultValue="true"
            android:title="@string/preferences_tracking_protection_private"
            android:key="@string/pref_key_tracking_protection_private"
            app:iconSpaceReserved="false"/>

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:title="@string/settings_privacy_personal_data">

        <org.mozilla.reference.browser.settings.QwantPreference
            android:key="@string/pref_key_privacy_cleardata"
            android:title="@string/settings_privacy_clear_data"
            android:widgetLayout="@layout/preference_arrowed_widget"
            app:iconSpaceReserved="false" />

        <!-- <org.mozilla.reference.browser.settings.QwantPreferenceSwitch
            android:key="@string/pref_key_privacy_cleardata_on_close"
            android:title="@string/settings_privacy_clear_data_on_close"
            android:summary="@string/settings_privacy_clear_data_on_close_summary"
            android:defaultValue="false"
            app:iconSpaceReserved="false"/> -->

        <org.mozilla.reference.browser.settings.QwantPreference
            android:key="@string/pref_key_privacy_cleardata_on_close_content"
            android:title="@string/settings_privacy_clear_data_on_close"
            android:widgetLayout="@layout/preference_arrowed_widget"
            app:iconSpaceReserved="false" />

    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>