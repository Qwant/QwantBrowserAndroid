<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.mozilla.reference.browser.settings.QwantPreference
        android:key="@string/pref_key_general_makedefaultbrowser"
        android:title="@string/settings_general_makedefaultbrowser"
        android:widgetLayout="@layout/preference_arrowed_widget"
        android:summary="@string/settings_general_makedefaultbrowser_summary"
        app:iconSpaceReserved="false" />

    <org.mozilla.reference.browser.settings.QwantPreference
        android:key="@string/pref_key_general_language"
        android:title="@string/settings_general_language"
        app:allowDividerAbove="true"
        android:widgetLayout="@layout/preference_arrowed_widget"
        app:iconSpaceReserved="false" />

    <org.mozilla.reference.browser.settings.QwantPreferenceDropdown
        android:key="@string/pref_key_general_dark_theme"
        android:title="@string/settings_general_dark_theme"
        android:entries="@array/dark_theme_values"
        android:entryValues="@array/dark_theme_keys"
        android:defaultValue="@string/settings_dark_theme_system_code"
        app:iconSpaceReserved="false"/>


    <org.mozilla.reference.browser.settings.CustomColorPreference
        android:key="@string/pref_key_general_custom_color"
        android:defaultValue="blue"
        android:title="Theme"
        android:summary="Blue"
        app:iconSpaceReserved="false" />

    <org.mozilla.reference.browser.settings.CustomCharacterPreference
        android:key="@string/pref_key_general_custom_character"
        android:defaultValue="random"
        android:title="Character"
        android:summary="AlÃ©atoire"
        app:iconSpaceReserved="false" />

    <org.mozilla.reference.browser.settings.QwantPreferenceSwitch
        android:key="@string/pref_key_general_newsonhome"
        android:defaultValue="true"
        android:title="@string/settings_general_newsonhome"
        app:iconSpaceReserved="false" />

    <org.mozilla.reference.browser.settings.QwantPreferenceSwitch
        android:key="@string/pref_key_general_tiles"
        android:defaultValue="true"
        android:title="@string/settings_general_tiles"
        app:iconSpaceReserved="false" />

    <org.mozilla.reference.browser.settings.QwantPreferenceDropdown
        android:key="@string/pref_key_general_adultcontent"
        android:title="@string/settings_general_adultcontent"
        android:entries="@array/adult_content_values"
        android:entryValues="@array/adult_content_keys"
        android:defaultValue="@string/settings_adultcontent_moderate_code"
        app:iconSpaceReserved="false"/>


    <org.mozilla.reference.browser.settings.QwantPreferenceSwitch
        android:key="@string/pref_key_general_favicononserp"
        android:defaultValue="true"
        android:title="@string/settings_general_favicononserp"
        app:iconSpaceReserved="false" />

    <org.mozilla.reference.browser.settings.QwantPreferenceSwitch
        android:key="@string/pref_key_general_resultsinnewtab"
        android:defaultValue="false"
        android:title="@string/settings_general_resultsinnewtab"
        app:iconSpaceReserved="false" />

    <org.mozilla.reference.browser.settings.QwantPreferenceSwitch
        android:key="@string/pref_key_general_launchexternalapp"
        android:defaultValue="true"
        android:title="@string/settings_general_launchexternalapp"
        app:iconSpaceReserved="false" />

    <!-- TODO PLAY VIDEOS ON QWANT -->

</androidx.preference.PreferenceScreen>