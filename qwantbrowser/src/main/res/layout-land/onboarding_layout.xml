<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onboarding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qwant_green_light_v2">

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/onboarding_image_padding_vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/onboarding_anonyme_2_x" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/onboarding_image">

        <TextView
            android:id="@+id/onboarding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="@dimen/onboarding_title_line_height"
            android:paddingHorizontal="20dp"
            android:paddingTop="@dimen/onboarding_title_padding_top"
            android:paddingBottom="24dp"
            android:text="Qwant VIPrivacy remplace Adblock Plus"
            android:textColor="@color/qwant_black_v2"
            android:textSize="@dimen/onboarding_title_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/onboarding_text_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="20sp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="12dp"
            android:text="Moins de cookies, fini les bandeaux intrusifs !"
            android:textColor="@color/qwant_black_v2"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/onboarding_title" />

        <TextView
            android:id="@+id/onboarding_bullet_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:lineHeight="20sp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="8dp"
            android:text="Moins de cookies, fini les bandeaux intrusifs !"
            android:textColor="@color/qwant_black_v2"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/icon_check_copy_2"
            app:layout_constraintTop_toBottomOf="@id/onboarding_text_top" />

        <TextView
            android:id="@+id/onboarding_bullet_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:lineHeight="20sp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="8dp"
            android:text="Blocage des traqueurs, enfin libre !"
            android:textColor="@color/qwant_black_v2"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/icon_check_copy_2"
            app:layout_constraintTop_toBottomOf="@id/onboarding_bullet_1" />

        <TextView
            android:id="@+id/onboarding_bullet_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:lineHeight="20sp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp"
            android:text="Osef"
            android:textColor="@color/qwant_black_v2"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/icon_check_copy_2"
            app:layout_constraintTop_toBottomOf="@id/onboarding_bullet_2" />

        <TextView
            android:id="@+id/onboarding_text_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="20sp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="8dp"
            android:text="Moins de cookies, fini les bandeaux intrusifs !"
            android:textColor="@color/qwant_black_v2"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/onboarding_bullet_3" />

        <Button
            android:id="@+id/onboarding_validate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/button_rounded_black"
            android:text="Fermer"
            android:textColor="@color/true_white"
            app:layout_constraintBottom_toTopOf="@id/onboarding_more" />

        <Button
            android:id="@+id/onboarding_more"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:background="@android:color/transparent"
            android:text="En savoir plus"
            android:textColor="@color/qwant_black_v2"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>