<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#b3e6cc">

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/push_browser_light" />

    <TextView
        android:id="@+id/onboarding_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/onboarding_image"
        android:text="Qwant VIPrivacy remplace Adblock Plus"
        android:textStyle="bold"
        android:textSize="32sp"
        android:lineHeight="36sp"
        android:textColor="@color/qwant_black_v2"
        android:paddingHorizontal="20dp"
        android:paddingBottom="24dp"/>

    <TextView
        android:id="@+id/onboarding_bullet_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/onboarding_title"
        android:paddingHorizontal="20dp"
        android:paddingBottom="8dp"
        android:text="Moins de cookies, fini les bandeaux intrusifs !"
        android:textSize="16sp"
        android:textColor="@color/qwant_black_v2"
        android:lineHeight="20sp"
        android:drawableStart="@drawable/icon_check_copy_2"
        android:drawablePadding="12dp" />

    <TextView
        android:id="@+id/onboarding_bullet_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/onboarding_bullet_1"
        android:paddingHorizontal="20dp"
        android:paddingBottom="46dp"
        android:text="Blocage des traqueurs, enfin libre !"
        android:textSize="16sp"
        android:textColor="@color/qwant_black_v2"
        android:lineHeight="20sp"
        android:drawableStart="@drawable/icon_check_copy_2"
        android:drawablePadding="12dp" />

    <Button
        android:id="@+id/onboarding_validate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_bullet_2"
        android:text="Fermer"
        android:textColor="@color/true_white"
        android:background="@drawable/button_rounded_black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_validate"
        android:text="En savoir plus"
        android:textColor="@color/qwant_black_v2"
        android:background="@android:color/transparent"/>
</androidx.constraintlayout.widget.ConstraintLayout>