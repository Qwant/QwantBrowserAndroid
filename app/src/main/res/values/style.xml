<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ThemeQwant" parent="Theme.AppCompat.Light">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="colorPrimary">@color/qwant_background</item>
        <item name="colorPrimaryDark">@color/qwant_background_dark</item>
        <item name="colorAccent">@color/qwant_selected</item>

        <item name="android:navigationBarColor">@color/qwant_background_dark</item>
        <item name="android:windowBackground">@color/qwant_background</item>
        <item name="android:textColor">@color/qwant_main</item>

        <item name="qwant_color_main">@color/qwant_main</item>
    </style>

    <style name="ThemeQwantNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="colorPrimary">@color/qwant_background</item>
        <item name="colorPrimaryDark">@color/qwant_background_dark</item>
        <item name="colorAccent">@color/qwant_selected</item>

        <item name="android:navigationBarColor">@color/qwant_background_dark</item>
        <item name="android:windowBackground">@color/qwant_background</item>
        <item name="android:textColor">@color/qwant_main</item>

        <item name="qwant_color_main">@color/qwant_main</item>
        <item name="qwant_color_background">@color/qwant_background</item>
        <item name="qwant_color_background_dark">@color/qwant_background_dark</item>
        <item name="qwant_color_light">@color/qwant_light</item>
        <item name="qwant_color_selected">@color/qwant_selected</item>
        <item name="qwant_color_selected_text">@color/qwant_selected_text</item>

        <item name="qwant_color_green">@color/photonGreen70</item>
        <item name="qwant_color_red">@color/photonRed70</item>

        <item name="toolbarSuggestionForeground">@color/qwant_main</item>
        <item name="toolbarSuggestionBackground">@color/qwant_selected</item>
        <item name="toolbarBackgroundColor">@color/qwant_background_dark</item>
        <item name="toolbarUrlBoxColor">@color/qwant_background</item>
        <item name="autocompleteBackgroundColor">@color/qwant_selected</item>
    </style>

    <style name="ThemeQwantNoActionBarPrivacy" parent="ThemeQwantNoActionBar">
        <item name="colorPrimary">@color/qwant_background_privacy</item>
        <item name="colorPrimaryDark">@color/qwant_background_dark_privacy</item>
        <item name="colorAccent">@color/qwant_selected_privacy</item>

        <item name="android:navigationBarColor">@color/qwant_background_dark_privacy</item>
        <item name="android:windowBackground">@color/qwant_background_privacy</item>
        <item name="android:textColor">@color/qwant_main_privacy</item>

        <item name="qwant_color_main">@color/qwant_main_privacy</item>
        <item name="qwant_color_background">@color/qwant_background_privacy</item>
        <item name="qwant_color_background_dark">@color/qwant_background_dark_privacy</item>
        <item name="qwant_color_light">@color/qwant_light_privacy</item>
        <item name="qwant_color_selected">@color/qwant_selected_privacy</item>
        <item name="qwant_color_selected_text">@color/qwant_selected_text_privacy</item>

        <item name="toolbarSuggestionForeground">@color/qwant_main_privacy</item>
        <item name="toolbarSuggestionBackground">@color/qwant_selected_privacy</item>
        <item name="toolbarBackgroundColor">@color/qwant_background_dark_privacy</item>
        <item name="toolbarUrlBoxColor">@color/qwant_background_privacy</item>
    </style>
</resources>
