<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mozac="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrowserActivity">

    <!-- <ImageView
        android:id="@+id/splashScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/photonWhite"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@drawable/flat_icon"/> -->

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="56dp"
        app:layout_behavior="org.mozilla.reference.browser.layout.EngineViewTopBehavior">
        <mozilla.components.concept.engine.EngineView
            android:id="@+id/engineView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <mozilla.components.browser.awesomebar.BrowserAwesomeBar
        android:id="@+id/awesomeBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:padding="4dp"
        android:visibility="gone"
        android:background="@color/photonWhite"
        mozac:awesomeBarTitleTextColor="?attr/qwant_color_main"
        mozac:awesomeBarDescriptionTextColor="?attr/qwant_color_light"
        mozac:awesomeBarChipTextColor="?attr/qwant_color_selected_text"
        mozac:awesomeBarChipBackgroundColor="?attr/qwant_color_selected" />

    <mozilla.components.feature.findinpage.view.FindInPageBar
        android:id="@+id/findInPageBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="#000000"
        mozac:findInPageQueryTextColor="#ffffff"
        mozac:findInPageQueryHintTextColor="#dddddd"
        mozac:findInPageResultCountTextColor="#ff88ff"
        mozac:findInPageButtonsTint="#ff88ff"
        android:visibility="gone" />

    <org.mozilla.reference.browser.compat.toolbar.BrowserToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:paddingEnd="8dp"
        android:background="?attr/toolbarBackgroundColor"
        mozac:browserToolbarSuggestionForegroundColor="?attr/toolbarSuggestionForeground"
        mozac:browserToolbarSuggestionBackgroundColor="?attr/toolbarSuggestionBackground" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_gravity="bottom"
        android:src="@drawable/shadow_gradient" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
