<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qwantbar_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/photonWhite">

    <LinearLayout
        android:id="@+id/qwantbar_layout_nav_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qwantbar_button_nav_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/qwant_color_main"
            android:src="@drawable/ic_nav_back"
            android:contentDescription="@string/menu_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qwantbar_layout_nav_forward"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qwantbar_button_nav_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/qwant_color_main"
            android:src="@drawable/ic_nav_forward"
            android:contentDescription="@string/menu_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qwantbar_layout_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qwantbar_button_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_search"
            android:contentDescription="@string/menu_search" />

        <TextView
            android:id="@+id/qwantbar_text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/menu_search"
            android:textColor="@color/menu_items" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qwantbar_layout_bookmarks"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qwantbar_button_bookmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_bookmark"
            android:contentDescription="@string/menu_bookmarks" />

        <TextView
            android:id="@+id/qwantbar_text_bookmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/menu_bookmarks"
            android:textColor="@color/menu_items" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qwantbar_layout_tabs"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <mozilla.components.ui.tabcounter.TabCounter
            android:id="@+id/qwantbar_button_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/qwantbar_text_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/menu_tabs"
            android:textColor="@color/menu_items" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qwantbar_layout_menu_qwant"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qwantbar_button_menu_qwant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu"
            android:contentDescription="@string/menu_bookmarks" />

        <TextView
            android:id="@+id/qwantbar_text_menu_qwant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/menu_more"
            android:textColor="@color/menu_items" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qwantbar_layout_menu_nav"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <mozilla.components.browser.menu.view.MenuButton
            android:id="@+id/qwantbar_button_menu_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nav_menu" />
    </LinearLayout>
</LinearLayout>